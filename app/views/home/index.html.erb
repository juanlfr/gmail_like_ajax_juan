<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container">
  <ul>
  <% @categories.each do  |category|%>
  <li><%= category.title  %></li>
  <div class="card">
    <ul id = "<%= category.title %>">
      <% category.tasks.each do |task|  %>
      <li id = "task-<%= task.id %>">
        <%= task.title  %>
        <% unless task.deadline.nil? %>,to read: <%= task.deadline.strftime('%D')%>
        <% end %>
        <%= check_box_tag :checked, 1, false , data: { remote: true, url: task_path(task.id), params: { id: task.id, status: task.status}.to_param, method: "put" }%>
        
        <%= link_to task_path(task.id), method: :delete, data: { confirm: "Voulez-vous supprimer cette tÃ¢che ?" }, :remote => true do %> <i class="fas fa-trash"></i>
          
          <%end%>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  </ul>
</div>
<div class="container">
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="card col-3">
        <% unless task.image.nil? %>
          <%= image_tag task.image, class: "rounded-circle" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>